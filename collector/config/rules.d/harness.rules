# Clear existing rules and set buffer.
-D
-b 8192
-f 1
-i

# Enable auditing.
-e 1

# Exec events (attribution).
-a always,exit -F arch=b64 -S execve,execveat -k exec

# Workspace watch (writes + attribute changes).
-w /work -p wa -k fs_watch

# Rename/unlink/link/symlink in workspace (aarch64-compatible syscalls).
-a always,exit -F arch=b64 -S renameat,renameat2,unlinkat,linkat,symlinkat -F dir=/work -k fs_change

# Metadata changes in workspace (aarch64-compatible syscalls).
-a always,exit -F arch=b64 -S fchmod,fchmodat,fchmodat2,fchown,fchownat,setxattr,lsetxattr,fsetxattr,removexattr,lremovexattr,fremovexattr,utimensat -F dir=/work -k fs_meta
